body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

header {
    background-color: #333;
    color: white;
    padding: 1em;
    text-align: center;
}

main {
    padding: 2em;
}

footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 1em;
}

@media screen and (max-width: 600px) {
    /* Add responsive styles for smaller screens */
    header, footer {
        padding: 0.5em;
    }
}
